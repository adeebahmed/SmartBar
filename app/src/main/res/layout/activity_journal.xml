<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="My Journal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/searchView"
                android:layout_alignTop="@+id/CalView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:background="#80d0f1f1"
               >

            </SearchView>
            <ImageView
                android:layout_height="50dp"
                android:id="@+id/CalView"
                android:src="@drawable/calbutton"
                />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Workout 1"

                android:ems="10"
                android:id="@+id/editText1"
                android:layout_above="@+id/editText5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Workout 2"
                android:id="@+id/editText2"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/editText6"
                android:layout_alignEnd="@+id/editText6" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Workout 3"
                android:id="@+id/editText3"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/editText6"
                android:layout_alignEnd="@+id/editText6" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Workout 4"
                android:id="@+id/editText4"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/editText6"
                android:layout_alignEnd="@+id/editText6" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
